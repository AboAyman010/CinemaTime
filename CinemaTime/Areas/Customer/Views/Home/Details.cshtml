@model CinemaTime.Models.Movie

<h2>@Model.Title</h2>
<p>@Model.Description</p>
<p>Category: @Model.Category.Name</p>

<h4>Actors:</h4>
<ul>
    
    @foreach (var ma in Model.MovieActors)
    {
        <li>
            <img src="@ma.Actor.Photo" alt="@ma.Actor.Name" style="width:50px;height:50px;border-radius:50%;" />
            @ma.Actor.Name
        </li>
    }
</ul>
<form asp-controller="Cart" asp-action="AddToCart" method="post">
    <input type="hidden" name="MovieId" value="@Model.MovieId" />
    <input class="form-control text-center me-3" id="inputQuantity" name="Count" type="number" value="1" style="max-width: 3rem" />
    <button class="btn btn-outline-dark flex-shrink-0" type="submit">
        <i class="bi-cart-fill me-1"></i>
        Add to cart
    </button>
</form>
