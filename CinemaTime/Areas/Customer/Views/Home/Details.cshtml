@model CinemaTime.Models.Movie

<h2>@Model.Title</h2>
<p>@Model.Description</p>
<p>Category: @Model.Category.Name</p>

<h4>Actors:</h4>
<ul>
    
    @foreach (var ma in Model.MovieActors)
    {
        <li>
            <img src="@ma.Actor.Photo" alt="@ma.Actor.Name" style="width:50px;height:50px;border-radius:50%;" />
            @ma.Actor.Name
        </li>
    }
</ul>
