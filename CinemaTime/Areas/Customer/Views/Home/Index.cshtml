@model List<Movie>

@{
    ViewData["Title"] = "الصفحة الرئيسية - حجز تذاكر السينما";
    Layout = "_Layout";
}

<!-- Header-->
<header class="bg-dark py-5">
    <div class="container px-4 px-lg-5 my-5">
        <div class="text-center text-white">
            <h1 class="display-4 fw-bolder">Shop in style</h1>
            <p class="lead fw-normal text-white-50 mb-0">With this shop hompeage template</p>
        </div>
    </div>
</header>

<!-- Section-->
<div class="container">

    <!-- Filter Section -->
    <section class="py-3 filter-bar">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6" style="background-color: rgba(var(--bs-light-rgb), var(--bs-bg-opacity)) !important; padding: 20px; border-radius: 10px;">
                    <form method="get">
                        <div class="row g-2">

                            <!-- Movie Title -->
                            <div class="col-12">
                                <input type="text" class="form-control" placeholder="اسم الفيلم" name="MovieTitle" value="@ViewBag.MovieTitle">
                            </div>

                            <!-- Category -->
                            <div class="col-12">
                                <select name="CategoryId" class="form-control">
                                    <option value="">-- اختر الفئة --</option>
                                    @foreach (var item in ViewBag.Categories)
                                    {
                                        if (ViewBag.CategoryId != null && ViewBag.CategoryId == item.CategoryId)
                                        {
                                            <option value="@item.CategoryId" selected>@item.Name</option>
                                        }
                                        else
                                        {
                                            <option value="@item.CategoryId">@item.Name</option>
                                        }
                                    }
                                </select>
                            </div>
                            <!-- Submit Button -->
                            <div class="col-12">
                                <button type="submit" class="btn btn-dark w-100">بحث</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
    <section class="py-5">
        <div class="container px-4 px-lg-5 mt-5">
            <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                @foreach(var item in Model)
                {
                    <div class="col mb-5">
                        <div class="card h-100">
                            <!-- Sale badge-->
                            <div class="badge bg-danger text-white position-absolute" style="top: 0.5rem; right: 0.5rem">@item.Category.Name</div>
                            <!-- Product image-->
                            <img class="card-img-top" src="~/Images/@item.PosterUrl" alt="@item.Title" />
                            <!-- Product details-->
                            <div class="card-body p-4">
                                <div class="text-center">
                                    <!-- Product name-->
                                    <h5 class="fw-bolder">@item.Title</h5>
                                    <!-- Description-->
                                    <p class="text-muted">@item.Description</p>
                                    <!-- تفاصيل-->

                                    <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                        <div class="text-center">
                                            <a asp-controller="Home" asp-action="Details" asp-route-id="@item.MovieId"
                                               class="btn btn-outline-dark mt-auto">تفاصيل</a>
                                        </div>

                                    </div>

                                    <!-- Duration-->
                                    <p><strong> : الجلسات</strong></p>
                                    <ul>
                                        @foreach (var session in item.Sessions){


                                            <p> @session.StartTime.ToString("hh:mm") 
                                                @(session.StartTime.Hour < 12 ? "AM" : "PM")

                                                <strong> : بداية الجلسة</strong>
                                            </p>
                                            <p>@session.EndTime.ToString("hh:mm")
                                                @(session.EndTime.Hour < 12 ? "AM" : "PM")
                                                <strong> : نهاية الجلسة</strong></p>

                                            <p>  @session.Hall.Name  <strong> : القاعة</strong></p>
                                            <p> $@session.Price<strong>: سعر التذكرة </strong></p>


                                        }

                                        <p> @item.Language  <strong>  : اللغة </strong></p>

                                        <!-- -->
                                        <p>

                                            @string.Join(", ", item.Sessions.Select(s => s.Hall.Name).Distinct())
                                            <strong> :السينما المتاحة</strong>
                                        </p>
                                        <!-- هل الفيلم متاح الآن -->
                                        @{
                                            var now = DateTime.Now;
                                            var availableNow = item.Sessions.Any(s => s.StartTime <= now && s.EndTime >= now);
                                            var upcoming = item.Sessions.Any(s => s.StartTime > now);
                                        }

                                        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                            <div class="text-center">
                                                @if (availableNow)
                                                {
                                                    <a class="btn btn-success mt-auto" href="#">🎟️ احجز الآن</a>
                                                }
                                                else if (upcoming)
                                                {
                                                    <button class="btn btn-warning mt-auto" disabled>⏳ قريبًا</button>
                                                }
                                                else
                                                {
                                                    <button class="btn btn-secondary mt-auto" disabled>❌ انتهى العرض</button>
                                                }
                                            </div>
                                        </div>

                                        <!-- Product reviews-->
                                        <div class="d-flex justify-content-center small text-warning mb-2">
                                            <p><strong>Rating:</strong> ⭐ @item.Rating / 10</p>

                                        </div>
                                        <!-- Product price-->
                                        <span class="text-muted text-decoration-line-through">200</span>

                                        @string.Join(", ", item.Sessions.Select(s => s.Price).Distinct())
                                </div>
                            </div>

                            <!-- زرار الحجز -->
                           
                           

                        </div>
                    </div>

                }
               
                @* pagination *@
            </div>
            <div class="row">
                <div class="col-12 d-flex justify-content-center">
                    <nav aria-label="Page navigation example">
                        <ul class="pagination">
                            @if (ViewBag.CurrentPage != 1)
                            {
                                <li class="page-item"><a class="page-link" href="/Customer/Home/Index?page=@(@ViewBag.CurrentPage-1)">Previous</a></li>

                            }
                            @for (var i = 1; i <= ViewBag.totalPages; i++)
                            {
                                if (i == ViewBag.CurrentPage)
                                {
                                    <li class="page-item active"><a class="page-link" href="/Customer/Home/Index?page=@i&MovieTitle=@ViewBag.MovieTitle">@i</a></li>

                                }
                                else
                                {
                                    <li class="page-item"><a class="page-link" href="/Customer/Home/Index?page=@i&CategoryId=@ViewBag.CategoryId">@i</a></li>

                                }

                            }
                            @if (ViewBag.totalPages != ViewBag.CurrentPage)
                            {
                                <li class="page-item"><a class="page-link" href="/Customer/Home/Index?page=@(@ViewBag.CurrentPage+1)">Next</a></li>

                            }
                        </ul>

                    </nav>
        </div>
    </section>
</div>